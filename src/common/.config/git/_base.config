[core]
	ignorecase = false
	autocrlf = false
	quotepath = false

[color]
	ui = true

[push]
	default = current

[pull]
 	rebase = true
	ff = only

[init]
	defaultBranch = main

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[gpg]
  format = ssh

[gpg "ssh"]
	allowedSignersFile = ~/.ssh/allowed_signers
	# TODO: Enter your SSH program pass
  # program = "/path/to/program"

[commit]
  gpgsign = true

[ghq]
	root = ~/Repositories